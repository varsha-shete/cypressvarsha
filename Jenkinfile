pipeline {
    agent {
        docker { 
			image 'cypress/included:12.5.1'
			args '--entrypoint=/bin/bash'
			args '-u root'
		}
    }
    stages {
        stage('Test') {
            steps {
                sh '''cypress --version
                cypress verify
		npm -v
		mkdir -p /test
		cp -r . /test
		cypress run -s /test/cypress/e2e/test.cy.js --e2e
		'''
            }
        }
    }
}
